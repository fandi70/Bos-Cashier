<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/hint0" />
            <corners android:bottomLeftRadius="32dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <stroke android:width="1dp" android:color="@color/hint" />
        </shape>
    </item> <!-- pressed -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/hint0" />
            <corners android:bottomLeftRadius="32dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <stroke android:width="1dp" android:color="@color/hint" />
        </shape>
    </item> <!-- focused -->
    <item>
        <shape>
            <solid android:color="@color/putih" />
            <corners android:bottomLeftRadius="32dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <stroke android:width="1dp" android:color="@color/hint0" />
        </shape>
    </item> <!-- default -->
</selector>