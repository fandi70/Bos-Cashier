<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/utama"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="Pegawai"
                android:textColor="@color/putih_tetap"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_transparan"
                android:clickable="true"
                android:padding="16dp"
                android:src="@drawable/ic_arrow"
                android:layout_alignParentLeft="true" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_bottom_corner_utama" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/bg_edittext_white"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Nama Pegawai"
                            android:textColor="@color/textcolor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/edt_namapegawai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/bg_edittext_white2"
                            android:hint="Nama Pegawai"
                            android:padding="16dp"
                            android:textColorHint="@color/hint"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="No Handphone"
                            android:textColor="@color/textcolor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/edt_nohppegawai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edittext_white2"
                            android:hint="0852 2555 XXXX"
                            android:inputType="numberDecimal"
                            android:padding="16dp"
                            android:textColorHint="@color/hint"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Alamat "
                            android:textColor="@color/textcolor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edittext_white2"
                            android:hint="exp:Paiton"
                            android:inputType="textEmailAddress"
                            android:padding="16dp"
                            android:textColorHint="@color/hint"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Hak Akses"
                            android:textColor="@color/textcolor"
                            android:textSize="14dp" />

                        <RadioGroup
                            android:id="@+id/opsistatuspembayaranAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radmin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/utama"
                                android:text="Admin"
                                android:textColor="@color/textcolor"
                                android:textSize="14dp" />

                            <RadioButton
                                android:id="@+id/rkasir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/utama"
                                android:text="Kasir"
                                android:checked="true"
                                android:textColor="@color/textcolor"
                                android:textSize="14dp" />

                        </RadioGroup>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Password"
                            android:textColor="@color/textcolor"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:background="@drawable/bg_edittext"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/passwordEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/transparans"
                                android:hint="Ketik password disini..."
                                android:inputType="textPassword"
                                android:padding="18dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/hint"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/passwordVisibilityToggle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="Toggle Password Visibility"
                                android:padding="18dp"
                                android:src="@drawable/ic_visible_pass" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/btsimpan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/selector_login"
                            android:clickable="true"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="Simpan"
                            android:textColor="@color/putih_tetap"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

